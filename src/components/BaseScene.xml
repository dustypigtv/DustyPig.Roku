<?xml version="1.0" encoding="UTF-8"?>
<component name="BaseScene" extends="Scene">
    
    <script type = "text/brightscript" uri = "pkg:/components/BaseScene.bs" />
	<script type="text/brightscript" uri = "pkg:/source/Theme.bs" />

		 
    <children>
	
		<!--
			I can't seem to observe an interface field here in a scene.
			So instead just create a content node, and set the .title to 
			the current theme_id.  Themed controls can observe the .title
		-->
		<ContentNode
			id="themeChangeNotifier" />

		<!-- Views -->
		<LandingView 
			id="landingView" />
		
		<LoginAccountView 
			id="loginAccountView"
			visible="false" />

		<SignUpView
			id="signUpView"
			visible="false" />

		<LoginProfileView
			id="loginProfileView"
			visible="false" />

		<MainView
			id="mainView"
			visible="false" />

		<MovieDetailsView
			id="movieDetailsView"
			visible="false" />
	
		<Video
        	id = "videoView"
        	enableUI = "true"
        	visible = "false"/>

	</children>

</component>