<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreenView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/HomeScreenView.bs" />

	<interface>
        <field id="switchToLoginAccountView" type="bool" value="false" alwaysNotify="true" />
        <field id="switchToMovieDetailsView" type="node" alwaysNotify="true" />
    </interface>
	
    <children>

        <!-- 
            SideBar is 150px wide
            Translations are handled by the parent view, so don't add 150 to x axis here
            Full width = 1920 - 150 = 1770
        -->

        <!--
            Backdrops are 1920x1080
            Shrinking width to 1770, size = 1770x995
            Half size = 885x497
        -->
        <Poster
            id="backdropPoster"
            loadWidth="885"
            loadHeight="497"
            loadDisplayMode="scaleToFit"
            failedBitmapUri="pkg:/images/failed_poster.jpg"
            translation="[885,0]" />


        <!-- Vertical gradient -->
        <Poster
            width="100"
            height="497"
            loadDisplayMode="scaleToZoom"
            translation="[885,0]"
            uri="pkg:/images/vertical_gradient.png" />
        

        <!-- Horizontal gradient -->
		<Poster
            width="885"
            height="100"
            loadDisplayMode="scaleToZoom"
            translation="[885,397]"
            uri="pkg:/images/horizontal_gradient.png" />

            
        <!--
            Give 75px padding on top

            Max Width = 1770 / 2 = 885
            Give 50 px padding on the right, end up with 835
        -->
        <ThemedLabel
            id="titleLabel"
            themeColor="primary"
            font="font:LargeBoldSystemFont"
            width="835"
            wrap="false"
            maxLines="1"
            ellipsizeOnBoundary="true"
			translation="[0,75]" />

        <!-- 
            titleLabel is at y=75, and 75px high
            So this y = 150
            give 25px bottom padding

            540 - 150 - 25 = 365
        -->
        <ThemedLabel
            id="descriptionLabel"
            themeColor="textOnBackground"
            width="835"
            height="365"
            wrap="true"
            ellipsizeOnBoundary="true"
			translation="[0,150]" />



		<!--
            Poster items are 300px high
            Add 75px for label and some spacing  = 375
            itemSize = [1770, 375]

            top info will take half the screen, so y translation = 1080 / 2 = 540
            translation = [0,540]

        -->
		<ThemedRowList
			id="rowList"
			translation="[0,540]"
            rowitemSize="[[200,300]]"
      		rowItemSpacing= "[[20,0]]"
       		itemSize= "[1770,375]"
       		rowLabelOffset= "[[0,10]]"
       		showRowLabel= "[true]"
       		rowFocusAnimationStyle= "fixedFocusWrap"
       		vertFocusAnimationStyle="fixedFocusWrap"
       		failedBitmapUri = "pkg:/images/failed_poster.jpg"
       		loadingBitmapUri = "pkg:/images/loading_poster.jpg"/>





        <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
            Sidebar is 150px, so adjust centerx
			centerx = ((1920 - 200) / 2) - 150 = 710
			centery = (1080 - 200) / 2 = 440
		-->
		<ThemedBusySpinner
			id="busySpinner"
			translation="[710,440]" />
		
		<!-- 
			Since the spinner above is centered and is 200 px high,
			Translate this 100 px down the y axis.
			Add another 50 for spacing
		-->
		<ThemedLabel
			id="busyLabel"
            themeColor="textOnBackground"
			text="The Pig is gettin' Dusty"
			width="1920"
			height="1080"
			horizAlign="center"
			vertAlign="center"
			translation="[-150,150]" />

	</children>

</component>