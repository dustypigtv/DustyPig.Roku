<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreenView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/HomeScreenView.bs" />

	<interface>
        <field id="switchToLoginAccountView" type="bool" value="false" alwaysNotify="true" />
    </interface>
	
    <children>

        <!-- 
            Backdrops are 1920x1080
            Half size = 960x540
        -->
        <Poster
            id="backdropPoster"
            width="960"
            height="540"
            loadDisplayMode="scaleToZoom"
            loadingBitmapUri="pkg:/images/loading_poster.jpg"
            failedBitmapUri="pkg:/images/failed_poster.jpg"
            translation="[960,0]" />


        <!-- Vertical gradient -->
        <Poster
            width="100"
            height="540"
            loadDisplayMode="scaleToZoom"
            translation="[960,0]"
            uri="pkg:/images/vertical_gradient.png" />
        

        <!-- Horizontal gradient -->
		<Poster
            width="960"
            height="100"
            loadDisplayMode="scaleToZoom"
            translation="[960,440]"
            uri="pkg:/images/horizontal_gradient.png" />

            
        <!--
            SideBar is 100px wide
            Give 75px padding on top
            so translation = [100,75]

            Max Width = (1920 - 100) / 2 = 910
            Give 50 px padding on the right, end up with 860
        -->
        <Label
            id="titleLabel"
            font="font:LargeBoldSystemFont"
            width="860"
            wrap="false"
            maxLines="1"
            ellipsizeOnBoundary="true"
			translation="[100,75]" />

        <!-- 
            titleLabel is at y=75, and 75px high
            So this y = 150
            give 25px bottom padding

            540 - 150 - 25 = 365
        -->
        <Label
            id="descriptionLabel"
            width="860"
            height="365"
            wrap="true"
            ellipsizeOnBoundary="true"
			translation="[100,150]" />



		<!--
            SideBar is 100px wide
            So this will be 1920 - 100 = 1820

            Poster items are 300px high
            Add 75px for label and some spacing  = 375
            itemSize = [1820, 375]

            Sidbar = 100px wide, so x translation = 100
            top info will take half the screen, so y translation = 1080 / 2 = 540
            translation = [100,540]

        -->
		<RowList
			id="rowList"
			translation="[100,540]"
            rowitemSize="[[200,300]]"
      		rowItemSpacing= "[[20,0]]"
       		itemSize= "[1820,375]"
       		rowLabelOffset= "[[0,10]]"
       		showRowLabel= "[true]"
       		rowFocusAnimationStyle= "fixedFocusWrap"
       		vertFocusAnimationStyle="fixedFocusWrap"
       		failedBitmapUri = "pkg:/images/failed_poster.jpg"
       		loadingBitmapUri = "pkg:/images/loading_poster.jpg"/>





        <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
		<BusySpinner
			id="busySpinner"
			translation="[860,440]" />
		
		<!-- 
			Since the spinner above is centered and is 200 px high,
			Translate this 100 px down the y axis.
			Add another 50 for spacing
		-->
		<Label
			id="busyLabel" 
			text="The Pig is gettin' Dusty"
			width="1920"
			height="1080"
			horizAlign="center"
			vertAlign="center"
			translation="[0,150]" />

	</children>

</component>