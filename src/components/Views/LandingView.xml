<?xml version="1.0" encoding="UTF-8"?>
<component name="LandingView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/LandingView.bs" />
   
    <children>

		<Poster
            id="backdropPoster"
            loadWidth="1920"
            loadHeight="1080"
            loadDisplayMode="scaleToZoom" />

		<!-- Dimmer -->
        <Rectangle
            width="1920"
            height="1080"
            color="#00000080" />
	
		<!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
		<BusySpinner
			id="busySpinner"
			uri="pkg:/images/spinner.png"
			translation="[860,440]" />


		<!-- 
            Since the spinner above is centered and is 200 px high,
            Translate this 100 px down the y axis.
            Add another 50 for spacing
        -->
        <ThemedLabel
            id="busyLabel"
            themeColor="textOnBackground"
            text="The Pig is gettin' Dusty"
            width="1920"
            height="1080"
            horizAlign="center"
            vertAlign="center"
            translation="[0,150]" />
		
	</children>

</component>