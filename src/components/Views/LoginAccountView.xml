<?xml version="1.0" encoding="UTF-8"?>
<component name="LoginAccountView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/LoginAccountView.bs" />

    <children>

        <!--
            Screen width = 1920
            Set control widths to 1000
            centery = (1920 - 1000) / 2 = 460
        -->

		
		<ThemedLabel
			id="headerLabel"
			font="font:LargeBoldSystemFont"
			text = "Sign In to Dusty Pig"
			horizAlign = "center"
			vertAlign = "center"
			width="1000"
			translation="[460,200]"
			themeColor="textOnBackground" />

		<TextEditBox
			id="emailTextBox"
			hintText="Email Address"
			clearOnDownKey="false"
			width="1000"
			translation="[460,300]" />

		<TextEditBox
			id="passwordTextBox"
			hintText="Password"
			clearOnDownKey="false"
			secureMode="true"
			width="1000"
			translation="[460,400]" />

		<ThemedButton
			id="forgotPasswordButton"
			translation="[460,500]"
			width="450"
			height="75"
			text="Forgot Password" />
		
		<ThemedButton
			id="loginAccountButton"
			translation="[1160,500]"
			width="300"
			height="75"
			text="Sign In" />

		<ThemedButton
			id="signUpButton"
			translation="[460,700]"
			width="1000"
			height="75" 
			text="Don't have an account?   Sign Up" />


        <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
        <ThemedBusySpinner
  		 	id="busySpinner"
			uri="pkg:/images/spinner.png"
			translation="[860,440]"
			visible="false" />
		

	</children>

</component>