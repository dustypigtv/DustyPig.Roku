<?xml version="1.0" encoding="UTF-8"?>
<component name="LoginAccountView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/LoginAccountView.bs" />

	<interface>
		<field id="switchToSignUpView" type="bool" value="false" alwaysNotify="true" />
		<field id="switchToLoginProfileView" type="bool" value="false" alwaysNotify="true" />
		<field id="switchToMainView" type="bool" value="false" alwaysNotify="true" />
	</interface>
   
    <children>

        <!--
            Screen width = 1920
            Set control widths to 1000
            centery = (1920 - 1000) / 2 = 460
        -->

		
		<Label
			id="headerLabel"
			font="font:LargeBoldSystemFont"
			text = "Sign In to Dusty Pig"
            color="#DBD160"
			horizAlign = "center"
			vertAlign = "center"
			width="1000"
			translation="[460,200]" />

		<TextEditBox
			id="emailTextBox"
			hintText="Email Address"
			clearOnDownKey="false"
			width="1000"
			translation="[460,300]" />

		<TextEditBox
			id="passwordTextBox"
			hintText="Password"
			clearOnDownKey="false"
			secureMode="true"
			width="1000"
			translation="[460,400]" />

		
		<Button
			id="loginAccountButton"
			translation="[1160,500]"
			minWidth="300"
			maxWidth="300"
			height="75"
			showFocusFootprint="true"
			iconUri=""
			focusedIconUri="">
			<Label 
				height="75" 
				width="300" 
				text="Sign In"
				vertAlign="center" 
				horizAlign="center" />
		</Button>

		<Button
			id="signUpButton"
			translation="[460,700]"
			minWidth="1000"
			maxWidth="1000"
			height="75"
			showFocusFootprint="true"
			iconUri=""
			focusedIconUri="">
			<Label 
				height="75" 
				width="1000" 
				text="Don't have an account?   Sign Up"
				vertAlign="center" 
				horizAlign="center" />
		</Button>


        <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
        <BusySpinner
  		 	id="busySpinner"
			uri="pkg:/images/spinner.png"
			translation="[860,440]"
			visible="false" />
		

	</children>

</component>