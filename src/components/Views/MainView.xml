<?xml version="1.0" encoding="UTF-8"?>
<component name="MainView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/components/Views/MainView.bs" />

	<interface>
        <field id="switchToLoginAccountView" type="bool" value="false" alwaysNotify="true" />
    </interface>
	
    <children>

      <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
		<BusySpinner
			id="busySpinner"
			translation="[860,440]" />
		
		<!-- 
			Since the spinner above is centered and is 200 px high,
			Translate this 100 px down the y axis.
			Add another 50 for spacing
		-->
		<Label
			id="busyLabel" 
			text="The Pig is gettin' Dusty"
			width="1920"
			height="1080"
			horizAlign="center"
			vertAlign="center"
			translation="[0,150]" />

        
		<!--
            Safe zone: 
                x,y = 192,106
                w,h = 1534,866

                numColumns = 4, 
                In-between spaces = 3
                Item width = 300
                Safe Zone = 1534

                Item Spacing = (1534 - (4 * 300)) / 3 = ~111 
        -->
		<RowList
			id="rowList"
			translation="[192,106]"
            rowitemSize="[[200,300]]"
      		rowItemSpacing= "[[20,0]]"
       		itemSize= "[1452,480]"
       		rowLabelOffset= "[[0,10]]"
       		showRowLabel= "[true]"
       		rowFocusAnimationStyle= "fixedFocusWrap"
       		vertFocusAnimationStyle="fixedFocusWrap"
       		failedBitmapUri = "pkg:/images/failed_poster.jpg"
       		loadingBitmapUri = "pkg:/images/loading_poster.jpg"/>

	</children>

</component>