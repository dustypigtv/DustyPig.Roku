<?xml version="1.0" encoding="UTF-8"?>
<component name="SeriesDetailsView" extends="Group">
    
    <script type = "text/brightscript" uri = "pkg:/source/Utils.bs" />
    <script type = "text/brightscript" uri = "pkg:/components/Views/SeriesDetailsView.bs" />
   
    <children>

		<Poster
            id="backdropPoster"
            loadWidth="1920"
            loadHeight="1080"
            loadDisplayMode="scaleToZoom"
            failedBitmapUri="pkg:/images/failed_poster.jpg" />

        
        <!-- Dimmer -->
        <Rectangle
            width="1920"
            height="1080"
            color="#000000DD" />



        <!--
            Safe zone: 
                x,y = 192,106
                w,h = 1534,866
        -->
        <LayoutGroup
            id="mainLayout"
            itemSpacings="[25]"
            translation="[192,106]">

            <ThemedLabel
                id="titleLabel"
                themeColor="primary"
                font="font:LargeBoldSystemFont"
                width="1534"
                wrap="false"
                maxLines="1"
                ellipsizeOnBoundary="true" />

            <!-- Rated-->
            <ThemedLabel
                id="ratedLabel"
                themeColor="textOnBackground"
                font="font:SmallestSystemFont" />


            <Group>

                <!-- Request Only-->
                <ThemedButton
                    id="requestButton"
                    width="250"
                    height="75"
                    text="Request" />


                <!-- Play + Actions -->
                <LayoutGroup
                    id="playbackButtonLayoutGroup"
                    layoutDirection="horiz"
                    itemSpacings="[25]">

                    <ThemedButton
                        id="playButton1"
                        width="250"
                        height="75"
                        text="Play" />
                    
                    <ThemedIconButton
                        id="watchlistButton1"
                        size="75"
                        icon="pkg:/images/add.png" />

                    <ThemedIconButton
                        id="addToPlaylistButton1"
                        size="75"
                        icon="pkg:/images/playlist.png" />


                </LayoutGroup>



                <!-- Play + Resume + Actions -->
                 <LayoutGroup
                    id="resumeButtonLayoutGroup"
                    layoutDirection="horiz"
                    itemSpacings="[25]">

                    <ThemedButton
                        id="playButton2"
                        width="250"
                        height="75"
                        text="Play" />
                    
                    <ThemedButton
                        id="resumeButton"
                        width="250"
                        height="75"
                        text="Resume" />

                    <ThemedButton
                        id="markWatchedButton"
                        width="250"
                        height="75"
                        text="Watched" />

                    <ThemedIconButton
                        id="watchlistButton2"
                        size="75"
                        icon="pkg:/images/add.png" />

                    <ThemedIconButton
                        id="addToPlaylistButton2"
                        size="75"
                        icon="pkg:/images/playlist.png" />


                </LayoutGroup>

            </Group>


          


           <!-- 
                Description Label 

                ****
                titleLabel uses LargeBoldSystemFont, which is 45pts
                font px = pts * 1.3333(3)
                titleLabel.height will be 45 * 1.3333(3) = 59.9999(9) = 60
                
                25 spacing

                yearLabel uses SmallestSystemFont, which is 27pts
                font px = pts * 1.3333(3)
                yearLabel.height = 27 * 1.3333(3) = 35.9999(9) = 36

                25 spacing

                play buttons.height = 75

                25 spacing
                ****

                Description.top = 60 + 25 + 36 + 25 + 75 + 25 = 246

                Bottom of cast & crew (first row) will be at 866
                    rowSize.h = 200
                    title.h = 34 * 1.3333(3) = 45.3333(3) = 46
                    spacing = 10
                    Top = 866 - (200 + 46 + 10) = 606

                25 spacing

                So max height = 606 - 246 - 25 = 335
            -->
            <ThemedLabel
                id="descriptionLabel"
                themeColor="textOnBackground"
                width="1534"
                height="335"
                vertAlign="center"
                wrap="true"
                ellipsizeOnBoundary="true" />



            
            <!-- Create a tab bar with 2 tabs -->
            <LayoutGroup>

                <ThemedRowList
                    id="episodesOrCastCrewRowList"
                    itemComponentName = "ThemedRowListLabel" 
                    rowitemSize="[[0,46]]"
                    itemSize= "[1512,46]"
                    rowItemSpacing="[[50,0]]"
                    numRows="1"
                    variableWidthItems="true"
                    focusFootprintBlendColor="#BBBBBB"
                    focusBitmapUri="pkg:/images/underline.9.png"
                    focusFootprintBitmapUri="pkg:/images/underline.9.png"
                    rowFocusAnimationStyle= "fixedFocusWrap"
                    vertFocusAnimationStyle="fixedFocus" />

                <!-- Divider -->
                <Rectangle
                    id="divider"
                    width="1534"
                    height="5"
                    color="#3C3C3C" />

            </LayoutGroup>

            <Group>

                <!-- Episodes -->
                <LayoutGroup
                    id="episodesGroup"
                    translation="[-50,0]"
                    itemSpacings="[50]"
                    layoutDirection="horiz"
                    visible="false">

                    <ThemedLabelList
                        id="seasonList"
                        itemSize="[260,60]"
                        itemSpacing="[0,20]"
                        numRows="10" 
                        vertFocusAnimationStyle="fixedFocus" />

                    <!-- 
                        w = 1534
                        seasons.w = 260
                        spacing = 50
                        maxW = 1534 - 260 - 100 = 1224
                        Ok, but I have to subtrack another 100 for the right edge to line up correctly.
                        I have no idea where that extra 100 comes from
                    -->
                    <ThemedMarkupList
                        id="episodesList"
                        itemComponentName="EpisodeListItem"
                        itemSize="[1124,220]"
                        itemSpacing="[0,40]"
                        numRows="4"
                        focusBitmapUri="pkg:/images/focus.9.png"
                        focusFootprintBitmapUri="pkg:/images/focus.9.png"
                        drawFocusFeedbackOnTop="true" 
                        vertFocusAnimationStyle="fixedFocus" />

                </LayoutGroup>



                <!-- Cast & Crew List -->
                <Group
                    id="castCrewGroup"
                    visible="false">

                    <!-- 
                        Cast & Crew 
                        Set rowItemSize to 133x200
                        100px spacing between rows for labels padding

                        itemSize = 1534x281
                        BUT there is 22px padding on each side from the focusedBitmap, 
                        so drop down to 1512x281

                        label on right is 1000
                        itemSize = 1512 - 1000 = 512
                    -->
                    <ThemedRowList
                        id="castCrewRowList"
                        rowitemSize="[[133,200]]"
                        rowItemSpacing= "[[20,0]]"
                        itemSize= "[1512,281]"
                        numRows="5"
                        rowLabelOffset= "[[0,10]]"
                        showRowLabel= "[true]"
                        rowFocusAnimationStyle= "fixedFocus"
                        vertFocusAnimationStyle="fixedFocus"
                        loadingBitmapUri="pkg:/images/grey_profile.png"
                        failedBitmapUri="pkg:/images/grey_profile.png"/>


                    <ThemedLabel 
                        id="selectedPersonLabel"
                        themeColor="textOnBackground"
                        font="font:SmallestSystemFont"
                        width="1000"
                        numLines="1"
                        wrap="true"
                        horizAlign="right"
                        ellipsizeOnBoundary="true"
                        translation="[512,0]" />

                </Group>

            </Group>

        </LayoutGroup>

        <!-- 
			Spinner images are 200x200
			Screen is 1920x1024
			centerx = (1920 - 200) / 2 = 860
			centery = (1080 - 200) / 2 = 440
		-->
		<ThemedBusySpinner
			id="busySpinner"
			visible="false"
			translation="[860,440]" />


        <Animation 
            id="slideUpAnimation"
            duration="0.25">
            <Vector2DFieldInterpolator 
                key="[0.0, 1.0]"
                keyValue="[[192.0, 106.0], [192.0, -500.0]]"
                fieldToInterp="mainLayout.translation" />
        </Animation>

        <Animation 
            id="slideDownAnimation"
            duration="0.25">
            <Vector2DFieldInterpolator 
                key="[0.0, 1.0]"
                keyValue="[[192.0, -500.0], [192.0, 106.0]]"
                fieldToInterp="mainLayout.translation" />
        </Animation>
        
		
	</children>

</component>